{
  "manifest_version": 2,
  "permissions": ["pageCapture", "activeTab", "storage"],
  "icons": {
    "128": "assets/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/icon_128.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": []
}
